{
  "name": "gfn-linux",
  "appId": "com.github.wuemeli.${name}",
  "version": "1.0.3",
  "author": {
    "name": "Wuemeli",
    "email": "contact@wuemeli.com"
  },
  "description": "A Linux desktop app for GeForce NOW",
  "repository": "https://github.com/wuemeli/gfn-linux",
  "main": "./build/main.js",
  "scripts": {
    "start": "npm run compile && electron .",
    "compile": "tsc",
    "build": "npm run compile && electron-builder"
  },
  "build": {
    "appId": "com.github.wuemeli.${name}",
    "asar": true,
    "files": [
      "build/**/*",
      "icons/**/*",
      "package.json"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Games",
      "artifactName": "gfn-linux.${ext}",
      "icon": "icons/512x512.png"
    }
  },
  "keywords": [
    "gfn",
    "geforcenow",
    "geforce-now"
  ],
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/electron": "^1.6.10",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "typescript": "^5.3.3",
    "v8-compile-cache": "^2.4.0"
  }
}